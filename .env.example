# API Keys (Configure as needed)
ODDS_API_KEY="your_odds_api_key_here"              # Required: The Odds API key
SPORTS_REFERENCE_API_KEY="your_api_key_here"       # Optional: Sports Reference API
ESPN_API_KEY="your_espn_api_key_here"              # Optional: ESPN API
KENPOM_USERNAME="your_username"                    # Optional: KenPom credentials
KENPOM_PASSWORD="your_password"

# AI/LLM Integration (Optional)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"    # Optional: Claude API
OPENAI_API_KEY="your_openai_api_key_here"          # Optional: OpenAI API
GOOGLE_API_KEY="your_google_api_key_here"          # Optional: Google Gemini

# Email Configuration (For notifications)
EMAIL_USER="your_email@gmail.com"
EMAIL_PASS="your_email_password"
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT="587"

# Twitter Integration (Optional)
TWITTER_API_KEY="your_twitter_api_key"
TWITTER_API_SECRET="your_twitter_api_secret"
TWITTER_ACCESS_TOKEN="your_access_token"
TWITTER_ACCESS_SECRET="your_access_secret"

# System Configuration
BANKROLL="10000.0"                                 # Starting bankroll for betting
MAX_BET_PERCENTAGE="0.05"                          # Max 5% per bet
CONFIDENCE_THRESHOLD="0.60"                        # Minimum confidence for bets
LOG_LEVEL="INFO"                                   # Logging level: DEBUG, INFO, WARNING, ERROR

# Database Configuration
DATABASE_URL="sqlite:///./basketball_betting.db"

# Feature Flags
ENABLE_LIVE_BETTING="true"
ENABLE_PROP_BETTING="true"
ENABLE_PAPER_TRADING="true"
ENABLE_MARCH_MADNESS_MODE="false"                  # Enable during tournament

# Monitoring
ENABLE_METRICS="true"
METRICS_PORT="9090"
